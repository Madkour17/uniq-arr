{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2019"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "importHelpers": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
